MDScreen:
    name: 'ready'
    Image:
        source: 'D:\Python\Game_kivy\ekywalky1.jpeg'
        pos_hint: {'center_x': .5, "center_y": .9}
        size_hint_x: .8
    MDLabel:
        id: dice_res
        text: '0'
        halign: 'center'
        font_style: 'H2'

    MDFillRoundFlatButton:
        text: 'Выход'
        size_hint: .6, .075
        pos_hint: {'center_x': .5, "center_y": .1}
        on_release:
            app.quit()

    MDFillRoundFlatButton:
        id: dice_roll
        text: 'Бросить кубик'
        size_hint: .6, .075
        pos_hint: {'center_x': .5, "center_y": .2}
        on_release:
            app.dice()
